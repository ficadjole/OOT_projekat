<Window x:Class="OOT_Kursevi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOT_Kursevi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Tab1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Dostupni kursevi" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="0" Grid.Column="1" Content="Nedostupni kursevi" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>


                    <DataGrid Grid.Row="1" Grid.Column="0" x:Name="dtGrid_dostupni" IsReadOnly="True" />
                    <DataGrid Grid.Row="1" Grid.Column="1" x:Name="dtGrid_nedostupni" IsReadOnly="True"/>



                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button x:Name="btnDodaj" Content="Dodaj novi kurs" Grid.Row="0" Margin="10 0 10 0"/>
                            <Button x:Name="btnObrisi" Content="Ukloni kurs" Grid.Row="1" Margin="10 10 10 0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Tab2" Height="20" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Drugi tab" Grid.Column="0"/>
                    <TreeView Grid.Column="0" x:Name="KategorijeTV" Height="300" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <TreeViewItem Header="Kategorija1">
                            <TreeViewItem Header="Kurs1"/>
                            <TreeViewItem Header="Kurs2"/>
                            <TreeViewItem Header="Kurs3"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Kategorija2">
                            <TreeViewItem Header="Kurs4"/>
                            <TreeViewItem Header="Kurs5"/>
                            <TreeViewItem Header="Kurs6"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Kategorija3">
                            <TreeViewItem Header="Kurs7"/>
                            <TreeViewItem Header="Kurs8"/>
                            <TreeViewItem Header="Kurs9"/>
                        </TreeViewItem>
                        <Button Content="Dodaj u korpu" x:Name="Dodaj" Click="BTN_DodajClick" Height="30" Width="100" Margin="260 150 0 0"/>
                    </TreeView>
                    <Button Content="Potvrdi" x:Name="Potvrdi" Click="BTN_PotvrdiClick" Height="30" Width="150" Grid.Column="1" Margin="0 260 0 0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tab3">
                <Label Content="Treci tab"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
