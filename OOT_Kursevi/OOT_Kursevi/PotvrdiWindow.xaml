<Window x:Class="OOT_Kursevi.PotvrdiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOT_Kursevi"
        mc:Ignorable="d"
        Title="PotvrdiWindow" Height="370" Width="260">
    <Grid>
        <ListView x:Name="ListaKorpa1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="320" Width="250">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naziv" DisplayMemberBinding="{Binding Naziv}" />
                    <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Cena}" />
                    <GridViewColumn Header="Vrsta" DisplayMemberBinding="{Binding Vrsta}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
